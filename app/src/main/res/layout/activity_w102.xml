                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:enabled="false"
                        android:hint="@string/W116"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="40"
                        app:minValue="1"
                        app:type="range" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

