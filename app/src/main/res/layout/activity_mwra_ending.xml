<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.aku.wasimabbas.ehsas_evaluation.ui.other.EndingActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.wasimabbas.ehsas_evaluation.ui.sections.EndingMWRA" />

        <variable
            name="form"
            type="edu.aku.wasimabbas.ehsas_evaluation.models.Form" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fldGrpEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--W104  Radio-->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVW104"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/Q_W104" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/W104" />

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/W104"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/W10401"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/W10401" />

                        <RadioButton
                            android:id="@+id/W10402"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/W10402" />

                        <RadioButton
                            android:id="@+id/W10403"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/W10403" />

                        <RadioButton
                            android:id="@+id/W10404"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/W10404" />

                        <RadioButton
                            android:id="@+id/W10405"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/W10405" />

                        <RadioButton
                            android:id="@+id/W10496"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/W10496" />

                        <EditText
                            android:id="@+id/W10496x"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="12dp"
                            android:hint="@string/W10496"
                            android:tag="W10496"
                            android:text='@{W10496.checked? W10496x.getText().toString() : ""}'
                            android:visibility='@{W10496.checked? View.VISIBLE : View.GONE}' />

                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--ENDBUTTON linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimary"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:padding="10dp"
                    android:text="End Interview"
                    android:textColor="@color/white" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>